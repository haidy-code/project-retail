<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Product_detailsFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/product_details_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/product_details_title_tv"
        android:src="@drawable/ic_add"
        android:scaleType="fitXY"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"/>
    <TextView android:id="@+id/product_details_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"

        android:text="product name"
        android:textColor="#000"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:maxLines="1"
        android:ellipsize="end"

        />
    <TextView android:id="@+id/product_details_details_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/product_details_title_tv"
        app:layout_constraintLeft_toLeftOf="@+id/product_details_title_tv"
        app:layout_constraintRight_toRightOf="@+id/product_details_title_tv"
        android:layout_marginTop="8dp"
        android:text="product details"
        android:textColor="#000"
        android:textSize="18sp"
        android:fontFamily="monospace"
        android:maxLines="1"
        android:ellipsize="end"
        />
    <View
        android:id="@+id/product_details_view"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintLeft_toLeftOf="@+id/product_details_details_tv"
        app:layout_constraintRight_toRightOf="@+id/product_details_details_tv"
        app:layout_constraintTop_toBottomOf="@+id/product_details_details_tv"
        android:layout_marginTop="16dp"
        android:background="#000"/>
    <TextView
        android:id="@+id/details_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/product_details_view"
        app:layout_constraintLeft_toLeftOf="@+id/product_details_view"
        android:text="300"
        android:textColor="#448AFF"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"/>
    <ImageButton android:id="@+id/details_minus_image_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/details_quantity_tv"
        app:layout_constraintBottom_toBottomOf="@+id/details_quantity_tv"
        app:layout_constraintRight_toLeftOf="@+id/details_quantity_tv"
        android:background="@drawable/ic_remove"
        android:layout_marginRight="8dp"/>
    <TextView
        android:id="@+id/details_quantity_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"
        app:layout_constraintTop_toTopOf="@+id/details_price_tv"
        app:layout_constraintBottom_toBottomOf="@+id/details_price_tv"
        app:layout_constraintRight_toLeftOf="@+id/details_plus_image_btn"
        android:textColor="#448AFF"
        android:textSize="18sp"
        android:ems="2"
        android:gravity="center"
        android:maxEms="2"
        android:maxLines="1"
        android:layout_marginRight="8dp"
        android:text="1"
        android:textStyle="bold"/>
    <ImageButton android:id="@+id/details_plus_image_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/details_quantity_tv"
        app:layout_constraintBottom_toBottomOf="@+id/details_quantity_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/ic_add"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"/>
    <View
        android:id="@+id/product_details_view2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintLeft_toLeftOf="@+id/product_details_details_tv"
        app:layout_constraintRight_toRightOf="@+id/product_details_details_tv"
        app:layout_constraintTop_toBottomOf="@+id/details_price_tv"
        android:layout_marginTop="16dp"
        android:background="#000"/>

    <TextView
        android:id="@+id/product_details_description_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/addtocart_btn"
        app:layout_constraintLeft_toLeftOf="@id/product_details_details_tv"
        app:layout_constraintRight_toRightOf="@+id/product_details_details_tv"
        app:layout_constraintTop_toBottomOf="@+id/product_details_view2"
        android:ellipsize="end"
        android:textColor="#000"
        android:textSize="18sp"/>
<Button
    android:id="@+id/addtocart_btn"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="@id/product_details_details_tv"
    app:layout_constraintRight_toRightOf="@+id/product_details_details_tv"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="58dp"
    android:text="Add to Cart"
    android:textAllCaps="false"
    android:textColor="#fff"
    android:backgroundTint="#448AFF"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>